<Page x:Class="CV_Online.ClientHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CV_Online"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ClientHome">

    <Grid>
        <Grid Margin="0,0,-217,-19" HorizontalAlignment="Left" Width="517">
            <Grid.RowDefinitions>
                <RowDefinition Height="92*"/>
                <RowDefinition Height="227*"/>
            </Grid.RowDefinitions>
            <WindowsFormsHost HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517" Grid.RowSpan="2"/>
            <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" Grid.RowSpan="2">
                <TabItem Header="Search Job">
                    <Grid Background="#FFE5E5E5" Margin="0,0,0,-1">
                        <DataGrid ItemsSource="{Binding getData}" x:Name="dataGridSearchJob" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="305" Height="181" AutoGenerateColumns="False" SelectionChanged="dataGridSearchJob_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}"/>
                                <DataGridTextColumn Header="Province" Binding="{Binding Province}"/>
                                <DataGridTextColumn Header="Job Type" Binding="{Binding Job_Type}"/>
                                <DataGridTextColumn Header="Company" Binding="{Binding Company}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label x:Name="label" Content="Search Job" HorizontalAlignment="Left" Margin="361,44,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="361,69,0,0" TextWrapping="Wrap" Text="Keyword" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label1" Content="Job Category" HorizontalAlignment="Left" Margin="361,94,0,0" VerticalAlignment="Top"/>
                        <ComboBox ItemsSource="{Binding getData}" SelectedValuePath="Id" DisplayMemberPath="Category" x:Name="cmbJob_Category" HorizontalAlignment="Left" Margin="361,120,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbJob_Category_SelectionChanged"/>
                        <Label x:Name="label1_Copy" Content="Job Location" HorizontalAlignment="Left" Margin="361,140,0,0" VerticalAlignment="Top"/>
                        <ComboBox ItemsSource="{Binding getData}" SelectedValuePath="Id" DisplayMemberPath="Name" x:Name="cmbProvince1" HorizontalAlignment="Left" Margin="361,166,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbProvince1_SelectionChanged"/>
                        <Label x:Name="label1_Copy1" Content="Job Type" HorizontalAlignment="Left" Margin="361,187,0,0" VerticalAlignment="Top"/>
                        <ComboBox ItemsSource="{Binding getData}" SelectedValuePath="Id" DisplayMemberPath="Type" x:Name="cmbJob_Type" HorizontalAlignment="Left" Margin="361,213,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbJob_Type_SelectionChanged"/>
                        <Label x:Name="label2" Content="Welcome, Job Seeker" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Edit Profil">
                    <Grid Background="#FFE5E5E5">
                        <Label x:Name="label3" Content="Edit Profil" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy" Content="Name" HorizontalAlignment="Left" Margin="25,41,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="106,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy1" Content="Address" HorizontalAlignment="Left" Margin="268,41,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1_Copy" HorizontalAlignment="Left" Height="23" Margin="349,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy2" Content="Contact" HorizontalAlignment="Left" Margin="25,233,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1_Copy1" HorizontalAlignment="Left" Height="23" Margin="106,237,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy3" Content="Password" HorizontalAlignment="Left" Margin="25,203,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1_Copy2" HorizontalAlignment="Left" Height="23" Margin="106,207,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy4" Content="Email" HorizontalAlignment="Left" Margin="25,171,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1_Copy3" HorizontalAlignment="Left" Height="23" Margin="106,175,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy5" Content="Age" HorizontalAlignment="Left" Margin="25,139,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1_Copy4" HorizontalAlignment="Left" Height="23" Margin="106,143,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy6" Content="Birthday" HorizontalAlignment="Left" Margin="25,106,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy7" Content="Place" HorizontalAlignment="Left" Margin="25,77,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox1_Copy6" HorizontalAlignment="Left" Height="23" Margin="106,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy8" Content="Village" HorizontalAlignment="Left" Margin="268,171,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy9" Content="District" HorizontalAlignment="Left" Margin="268,139,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy10" Content="Regency" HorizontalAlignment="Left" Margin="268,106,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy11" Content="Province" HorizontalAlignment="Left" Margin="268,77,0,0" VerticalAlignment="Top"/>
                        <DatePicker HorizontalAlignment="Left" Margin="106,110,0,0" VerticalAlignment="Top" Width="120"/>
                        <ComboBox x:Name="cmbProvince2" HorizontalAlignment="Left" Margin="349,81,0,0" VerticalAlignment="Top" Width="120"/>
                        <ComboBox x:Name="cmbRegency" HorizontalAlignment="Left" Margin="349,110,0,0" VerticalAlignment="Top" Width="120"/>
                        <ComboBox x:Name="cmbDistrict" HorizontalAlignment="Left" Margin="349,143,0,0" VerticalAlignment="Top" Width="120"/>
                        <ComboBox x:Name="cmbVillage" HorizontalAlignment="Left" Margin="349,175,0,0" VerticalAlignment="Top" Width="120"/>
                        <Button x:Name="button" Content="Update" HorizontalAlignment="Left" Margin="349,233,0,0" VerticalAlignment="Top" Width="75"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Make CV">
                    <Grid Background="#FFE5E5E5" Margin="0,-1,0,1">
                        <Label x:Name="label3_Copy12" Content="Make Curriculum Vitae" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy13" Content="Last Education" HorizontalAlignment="Left" Margin="23,160,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy14" Content="Upload KTP" HorizontalAlignment="Left" Margin="23,129,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy15" Content="Upload CV" HorizontalAlignment="Left" Margin="23,101,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.517,0.333"/>
                        <Label x:Name="label3_Copy16" Content="Department" HorizontalAlignment="Left" Margin="23,69,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label3_Copy17" Content="College" HorizontalAlignment="Left" Margin="25,41,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="152,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="textBox2_Copy" HorizontalAlignment="Left" Height="23" Margin="152,73,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="textBox2_Copy1" HorizontalAlignment="Left" Height="23" Margin="152,101,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="textBox2_Copy2" HorizontalAlignment="Left" Height="23" Margin="152,129,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="23" Margin="152,160,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                        <Label x:Name="label3_Copy18" Content="Work Experience" HorizontalAlignment="Left" Margin="23,188,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox3_Copy" HorizontalAlignment="Left" Height="73" Margin="152,188,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="207"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</Page>
